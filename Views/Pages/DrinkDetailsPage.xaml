<Page
    x:Class="WinUIApp.Views.Pages.DrinkDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:WinUIApp.Models"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="20" Spacing="10">

            <!-- Back Button -->
            <Button x:Name="BackButton" 
                    Content="Back" 
                    Click="BackButton_Click" 
                    HorizontalAlignment="Left"
                    Width="100"
                    Margin="0,0,0,10"/>

            <!-- Page Title -->
            <TextBlock Text="Drink Details" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Margin="0,0,0,10"/>

            <!-- Drink Image -->
            <Image x:Name="DrinkImage"
                   Width="150"
                   Height="150"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

            <!-- Drink Attributes -->
            <TextBlock x:Name="DrinkNameTextBlock" 
                       FontSize="18" 
                       FontWeight="SemiBold"/>
            <TextBlock x:Name="BrandTextBlock" 
                       FontSize="16"/>
            <TextBlock x:Name="AlcoholContentTextBlock" 
                       FontSize="16"/>
            <TextBlock x:Name="CategoryTextBlock" 
                       FontSize="16"/>
            <TextBlock x:Name="AverageScoreTextBlock"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,10,0,10"/>

            <!-- Reviews Section -->
            <TextBlock Text="Reviews:" 
                       FontSize="20" 
                       FontWeight="SemiBold"
                       Margin="0,10,0,5"/>
            <ListView x:Name="ReviewsListView">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Review">
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="{x:Bind Title}" 
                                       FontWeight="Bold" 
                                       FontSize="14"/>
                            <TextBlock FontSize="14">
                                <Run Text="Score: "/>
                                <Run Text="{x:Bind Score}"/>
                            </TextBlock>
                            <TextBlock Text="{x:Bind Description}" 
                                       TextWrapping="Wrap" 
                                       FontSize="13"/>
                            <TextBlock Text="{x:Bind PostedDateTime}" 
                                       FontStyle="Italic" 
                                       FontSize="12" 
                                       Margin="0,0,0,5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Buttons Section -->
            <StackPanel Orientation="Vertical" Spacing="10" Margin="0,20,0,0">
                <Button x:Name="AddDrinkButton" 
                        Content="Add to My Drinks" 
                        Click="AddDrinkButton_Click" 
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="RemoveDrinkButton" 
                        Content="Remove from My Drinks" 
                        Click="RemoveDrinkButton_Click"
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="VoteDrinkButton" 
                        Content="Vote for Drink of the Day" 
                        Click="VoteDrinkButton_Click"
                        HorizontalAlignment="Stretch"/>
                <Button x:Name="UpdateDrinkButton" 
                        Content="Update Drink" 
                        Click="UpdateDrinkButton_Click"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
