@{
    ViewData["Title"] = "My Favorite Drinks";
}
@model FavoriteDrinksViewModel

<div class="container">
    <h1 class="display-4 text-center mb-4">My Favorite Drinks</h1>
    
    <div class="d-flex flex-wrap justify-content-center gap-4 mt-4">
        @foreach (var drink in Model.FavoriteDrinks)
        {
            <div class="card shadow-sm border" style="width: 220px; height: 400px; overflow: hidden;">
                @await Html.PartialAsync(
                    "~/Views/Drink/DrinkElement.cshtml",
                    new WinUIApp.WebUI.Models.DrinkElementViewModel { Drink = drink }
                )
            </div>
        }
    </div>
</div> 