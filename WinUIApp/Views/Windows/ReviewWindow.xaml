<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUIApp.Views.Windows.ReviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp.Views.Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ReviewWindow">

    <Grid Padding="30" x:Name="rootGrid">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Leave a Review:" FontSize="24" FontWeight="Bold"
                Margin="0,20,0,40" HorizontalAlignment="Center"/>
            
            <TextBox PlaceholderText="Enter your review here" Margin="0,0,0,40"
                Height="100" Width="500" BorderBrush="#3d3d3d"
                MaxLength="500"
                Text="{Binding ReviewContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="Auto">
                <Button Content="Submit Review" Click="SubmitReview_Click" Margin="0,0,20,0" 
                    HorizontalAlignment="Left" FontWeight="SemiBold"/>
                
                <Button Content="Generate AI Review" Click="GenerateAIReview_Click"
                    Foreground="#FFFFEE" Background="#313131" HorizontalAlignment="Right" 
                    FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>
        <ContentDialog x:Name="EmptyReviewDialog"
            Title="Empty Review"
            Content="Please enter review text before submitting."
            CloseButtonText="OK" />
    </Grid>
</Window>
