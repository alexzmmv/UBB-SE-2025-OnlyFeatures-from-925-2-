<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Reset Button style to default (removes custom background, font, etc.) -->
    <Style TargetType="Button" x:Key="DefaultButton">
        <!-- Clear custom values by not setting any -->
        <!-- You can override locally as needed -->
        <Setter Property="Background" Value="{ThemeResource ButtonBackground}" />
        <Setter Property="Foreground" Value="{ThemeResource ButtonForeground}" />
        <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
        <Setter Property="Padding" Value="{ThemeResource ButtonPadding}" />
        <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
    </Style>

    <!-- Reset TextBlock style to default Light theme appearance -->
    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimary}" />
    </Style>

</ResourceDictionary>
