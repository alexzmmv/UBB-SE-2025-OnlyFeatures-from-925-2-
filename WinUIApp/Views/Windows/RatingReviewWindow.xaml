<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUIApp.Views.Windows.RatingReviewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:domain="using:WinUIApp.ProxyServices.Models"
    mc:Ignorable="d"
    Title="RatingReviewWindow">

    <Grid Padding="20" Background="White" x:Name="rootGrid">

        <Grid.Resources>
            <!-- Make all TextBox text black -->
            <Style TargetType="TextBox">
                <Setter Property="Foreground" Value="Black"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!--Title-->
        <TextBlock Text="Ratings and Reviews" FontSize="24" FontWeight="Bold" FontFamily="{StaticResource DefaultFontFamily}"
            VerticalAlignment="Center" Margin="20,0,0,0" Grid.Row="0"/>

        <Grid Grid.Row="1" Width="300" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Ratings" 
                FontSize="20"
                FontFamily="{StaticResource DefaultFontFamily}" 
                FontWeight="SemiBold"
                Margin="20,20,0,10"
                Grid.Row="0"/>

            <ListView Grid.Row="1"
                ItemsSource="{Binding RatingViewModel.Ratings, Mode=TwoWay}"
                SelectionMode="Single"
                SelectionChanged="RatingSelection_Changed"
                Background="White">
                <ListView.Resources>
                    <Style TargetType="ScrollViewer">
                        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
                        <Setter Property="VerticalScrollMode" Value="Enabled"/>
                    </Style>
                </ListView.Resources>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="domain:Rating">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Rating:" 
                                FontFamily="{StaticResource DefaultFontFamily}" 
                                Margin="0,0,5,0"/>
                            <TextBlock Text="{Binding RatingValue}" 
                                FontFamily="{StaticResource DefaultFontFamily}" 
                                FontWeight="SemiBold"/>
                            <TextBlock Text=" by User " 
                                FontFamily="{StaticResource DefaultFontFamily}"/>
                            <TextBlock Text="{Binding UserId}" 
                                FontFamily="{StaticResource DefaultFontFamily}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,-50,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="50"/>
                <!-- Spacing -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ContentDialog x:Name="NoRatingSelectedDialog"
                Title="No Rating Selected"
                Content="Please select a rating before adding a review."
                CloseButtonText="OK" />
            <!-- Average Rating Section -->
            <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="Average Rating" FontFamily="{StaticResource DefaultFontFamily}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/FullBottle.png" Width="18"  HorizontalAlignment="Left" Margin="20,0,10,0"/>
                    <TextBlock FontFamily="{StaticResource DefaultFontFamily}" FontSize="20px" VerticalAlignment="Center" 
                            Text="{Binding RatingViewModel.AverageRating, Mode=OneWay}" />
                </StackPanel>
            </StackPanel>

            <!-- Your Rating Section -->
            <StackPanel Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="Your Rating" FontFamily="{StaticResource DefaultFontFamily}" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Assets/Bottle.png" Width ="18" HorizontalAlignment="Left" Margin="20,0,10,0"/>
                    <Button Content="Rate" Click="AddRating_Click" FontWeight="Bold" Padding="10,5"
                            Background="Gray" Foreground="Black"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Reviews Section -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Header + Add Review Button -->
                <RowDefinition Height="Auto" />
                <!-- TextBox for new review -->
                <RowDefinition Height="*" />
                <!-- List of reviews -->
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Reviews" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" 
                FontFamily="{StaticResource DefaultFontFamily}" FontSize="20" FontWeight="SemiBold"
                Margin="20,0,0,0"/>

            <Button Grid.Row="0" Grid.Column="1" Content="Add Review" VerticalAlignment="Center" HorizontalAlignment="Right" 
                Height="30" Width="150" Click="AddReview_Click" Margin="0,0,20,0" Padding="0,0,0,0" BorderThickness="0" 
                Foreground="#FFFFEE" Background="#313131" FontFamily="{StaticResource DefaultFontFamily}" FontWeight="SemiBold" />

            <!-- List of existing reviews -->
            <ListView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                ItemsSource="{Binding ReviewViewModel.Reviews, Mode=OneWay}"
                SelectedItem="{Binding ReviewViewModel.SelectedReview, Mode=TwoWay}" 
                Background="#cacaca">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="domain:Review">
                        <StackPanel>
                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontFamily="{StaticResource DefaultFontFamily}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding CreationDate}" FontSize="12" Foreground="#3d3d3d" FontFamily="{StaticResource DefaultFontFamily}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</Window>