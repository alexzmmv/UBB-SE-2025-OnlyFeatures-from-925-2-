<UserControl
    x:Class="WinUIApp.Views.Components.DrinkListComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp.Views.Components"
    xmlns:models="using:WinUIApp.Models">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">

            <ItemsRepeater x:Name="DrinksRepeater" ItemsSource="{x:Bind ViewModel.PersonalDrinks, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout Orientation="Horizontal" MinItemWidth="200" MinItemHeight="250" MinRowSpacing="20" MinColumnSpacing="20"/>
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:Drink">
                        <Border Background="White"
                                CornerRadius="10"
                                Padding="15"
                                BorderBrush="Yellow"
                                BorderThickness="2">
                            <StackPanel Spacing="10" Width="200">
                                <Border Background="Gray"
                                        Height="150"
                                        CornerRadius="5">
                                    <Image Source="{x:Bind DrinkURL}"
                                           Stretch="UniformToFill"
                                           Width="170"
                                           HorizontalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{x:Bind DrinkName}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{x:Bind Brand.Name}"
                                           FontSize="14"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{x:Bind AlcoholContent}"
                                           FontSize="12"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </StackPanel>
    </ScrollViewer>

</UserControl>