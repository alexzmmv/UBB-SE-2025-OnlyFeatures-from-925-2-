<UserControl
    x:Class="WinUIApp.Views.Components.DrinkListComponent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUIApp.Views.Components"
    xmlns:models="using:WinUIApp.Models"
    xmlns:viewmodels="using:WinUIApp.ViewModels"
    x:Name="Root">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                  VerticalScrollBarVisibility="Disabled" 
                  Padding="0,0,0,15">
        <ItemsRepeater ItemsSource="{x:Bind Drinks, Mode=OneWay}"
                       Margin="0,0,0,10">
            <ItemsRepeater.Layout>
                <StackLayout Orientation="Horizontal" Spacing="20"/>
            </ItemsRepeater.Layout>

            <ItemsRepeater.ItemTemplate>
                <DataTemplate x:DataType="models:Drink">
                    <Border Background="White"
                            CornerRadius="10"
                            Padding="15"
                            BorderBrush="Yellow"
                            BorderThickness="2"
                            Width="200"
                            Height="250">
                        <StackPanel Spacing="10" Width="200">
                            <Button 
                                Background="Transparent"
                                Padding="0"
                                Click="DrinkItem_Click"
                                Tag="{x:Bind Id}">
                                <StackPanel>
                                    <Border Background="Gray"
                                        Height="150"
                                        CornerRadius="5">
                                        <Image Source="{x:Bind DrinkURL, Mode=OneWay}"
                                           Stretch="UniformToFill"
                                           Width="200"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="{x:Bind DrinkName, Mode=OneWay}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                                    <TextBlock Text="{x:Bind Brand.Name, Mode=OneWay}"
                                           FontSize="14"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                                    <TextBlock Text="{x:Bind AlcoholContent, Mode=OneWay}"
                                           FontSize="12"
                                           Foreground="Black"
                                           TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsRepeater.ItemTemplate>
        </ItemsRepeater>
    </ScrollViewer>
</UserControl>