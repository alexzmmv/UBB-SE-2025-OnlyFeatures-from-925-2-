<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="Anthracite">#292C33</Color>
    <Color x:Key="MediumDarkGray">#242222</Color>

    <!-- Define FontFamily resource -->
    <FontFamily x:Key="DefaultFontFamily">Segoe UI</FontFamily>

    <Style TargetType="Button" x:Key="DefaultButton">
        <Setter Property="Background" Value="{StaticResource Anthracite}" />
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
        <Setter Property="Padding" Value="8"/>
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="DarkGray"/>
        <Setter Property="FontFamily" Value="{StaticResource DefaultFontFamily}" />
    </Style>

</ResourceDictionary>
